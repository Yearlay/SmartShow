<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fashShow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/scrollview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout 
            android:id="@+id/store_list_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/add_store_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_store_button"/>
        </LinearLayout>
    </HorizontalScrollView>
    
    <GridView 
        android:id="@+id/screen_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scrollview1"
        android:paddingTop="5dp"
        android:layout_weight="1.51"
        android:horizontalSpacing="2dip"
        android:numColumns="auto_fit"
        android:verticalSpacing="2dip" />
        
</RelativeLayout>