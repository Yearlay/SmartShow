<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/menu_width"
              android:layout_height="@dimen/menu_height"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="@dimen/menu_img_size"
        android:layout_height="@dimen/menu_img_size"/>

    <TextView
        android:id="@+id/menu_dec"
        android:layout_width="@dimen/menu_length"
        android:layout_height="@dimen/menu_height"
        android:textSize="@dimen/menu_parent_dec_size"
        android:textColor="@color/text_color_high_dark"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/menu_sep"/>
</LinearLayout>